#OPTIONAL VARIABLES

variable "friendly_name" {
  description = "A descriptive name for the dataset"
  type        = string
  default     = "my_dataset"
}



variable "delete_contents_on_destroy" {
  description = "If set to true, delete all the tables in the dataset when destroying the resource; otherwise, destroying the resource will fail if tables are present"
  type        = bool
  default     = true
}

variable "default_table_expiration_ms" {
  description = "The default lifetime of all tables in the dataset, in milliseconds"
  type        = number
  default     = 3600000
}

variable "default_partition_expiration_ms" {
  description = "The default partition expiration for all partitioned tables in the dataset, in milliseconds"
  type        = number
  default     = 3600000
}



variable "table_id" {
  description = "The ID of the dataset containing this table"
  type        = string
  default     = "test_table"
}

variable "members" {
  description = "Identities that will be granted the privilege in role"
  type        = list(string)
  default     = ["allUsers"]
}

variable "routine_type" {
  description = "The type of routine"
  type        = string
  default     = "PROCEDURE"
}
variable "type" {
  description = "The supported types are DAY, HOUR, MONTH, and YEAR, which will generate one partition per day, hour, month, and year, respectively"
  type        = string
  default     = "DAY"
}
