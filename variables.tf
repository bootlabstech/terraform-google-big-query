#REQUIRED VARIABLES 
variable "dataset_id" {
  description = "A unique ID for this dataset, without the project name"
  type        = string
  default     = "dataset_id01"
}
variable "project_id" {
  description = "The ID of the project in which the resource belongs"
  type        = string
}
variable "description" {
  description = "A user-friendly description of the dataset"
  type        = string
  default     = "An optional description for this resource"
}
variable "location" {
  description = "The geographic location where the dataset should reside"
  type        = string
  default     = "asia-south1"
}
variable "user_by_email" {
  description = "An email address of a user to grant access to"
  type        = string
  default     = null
}


variable "labels" {
  description = "The labels associated with this dataset"
  type        = map(string)
  default     = null
}

variable "group_by_email" {
  description = "An email address of a Google Group to grant access to"
  type        = string
  default     = "DevOps@mahindra.com"
}

variable "policy_data" {
  description = "The policy data generated by a google_iam_policy data source."
  type        = string
  default     = null
}

variable "region" {
  description = "Available region for this resource"
  type        = string
  default     = "asia-south1"
}

